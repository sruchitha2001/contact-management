generator client {
  provider        = "prisma-client-js"
  output          = "../generated/prisma/client"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int        @id @default(autoincrement())
  name       String     @unique
  age        Int
  occupation String
  phone      String
  city       String
  Hobbies    String
  password   String
  todos      Todo[]
  activities Activity[]
}

model Todo {
  id     Int    @id @default(autoincrement())
  task   String
  userId Int //foreign key 
  user   User   @relation(fields: [userId], references: [id])
}

model Activity {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  date        DateTime
  createdAt   DateTime @default(now())

  userId Int
  user   User @relation(fields: [userId], references: [id])
}
